<UserControl
    x:Class="Esame.Views.GruppoDetailControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Esame.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    xmlns:vm="using:Esame.ViewModels">



    <StackPanel>
        <!-- lo faccio qui altrimenti più in su non lo vede -->
        <StackPanel.DataContext>
            <vm:gruppoDetailViewModel x:ConnectionId='1' x:Name="ViewModel" />
        </StackPanel.DataContext>

        <TextBlock>Id:</TextBlock>
        <TextBox Text="{Binding Nome}" />
        <TextBlock> - </TextBlock>
        <TextBlock>Nome:</TextBlock>
        <TextBox Text="{Binding Nome}" />
    </StackPanel>
</UserControl>

